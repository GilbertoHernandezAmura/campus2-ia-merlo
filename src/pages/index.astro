---
import "../styles/global.css";
import CountdownTimer from "../components/CountdownTimer.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Beneficios from "../components/Beneficios.astro";
import InfoClave from "../components/InfoClave.astro";
import Programa from "../components/Programa.astro";
import Experiencia from "../components/Experiencia.astro";
import CtaSection from "../components/CtaSection.astro";
import Alojamiento from "../components/Alojamiento.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es" data-theme="mytheme">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
		/>
		<title>Programa Intensivo de Inteligencia Artificial</title>
	</head>

	<body class="ai-background-pattern bg-base-100 text-neutral antialiased">
		<CountdownTimer />
		<Navbar />
		<Hero />
		<Beneficios />
		<InfoClave />
		<Programa />
		<Alojamiento />
		<Experiencia />
		<CtaSection />
		<Footer />
	</body>
	<style>
		.ai-background-pattern {
			background-image: url("/ia-pattern.svg");
			background-repeat: repeat;
			background-attachment: fixed;
			background-size: cover;
		}
	</style>
</html>
