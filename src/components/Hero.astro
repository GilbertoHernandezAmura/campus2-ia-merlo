---
// Importaciones del frontmatter para las fotos de preview
import previewFoto1 from "../img/experiencia/clase-afuera-1.jpg";
import previewFoto2 from "../img/experiencia/clase-en-lab-informatica.jpg";

// Información del Hero Section
const alliance = "Presenta UNLC";
const title = "PROGRAMA INTENSIVO DE INTELIGENCIA ARTIFICIAL";
const date = "FEB.2026";
const subtitle = "¿Vas a quedarte mirando o vas a ser parte?";
const description =
    "Una semana para sumergirse en el futuro en el corazón de las sierras, la Universidad Nacional de los Comechingones abre su campus para una experiencia única: aprender, crear y pensar con inteligencia artificial.";
const linkForm =
    "https://docs.google.com/forms/d/e/1FAIpQLSebQcHGRdKBRYJtmzqGa_HcUQnavyZveXXGbifC8JiVJgrjnA/viewform";

// Enlace de Google Drive
const driveVideoLink =
    "https://drive.google.com/file/d/1SX23t_mAVei89tFVzoRQoJxwOHbVZeEg/preview";
---

<section id="inicio" class="hero min-h-[85vh] py-12 md:py-20">
    <div class="w-full max-w-6xl mx-auto px-4 md:px-8">
        <div class="flex flex-col lg:flex-row-reverse gap-8 p-4 md:p-8 mb-16">
            <div
                class="w-full lg:w-1/2 lg:pl-12 relative pb-[56.25%] h-0 overflow-hidden rounded-2xl shadow-2xl"
            >
                <iframe
                    class="w-full h-full absolute overflow-hidden border-none left-0 top-0"
                    src={driveVideoLink}
                    allowfullscreen
                    title="Google Drive Video Player"
                    allow="autoplay; muted"></iframe>
            </div>

            <div class="w-full lg:w-1/2 lg:pr-12 text-center lg:text-left">
                <p class="text-sm font-semibold uppercase text-secondary mb-2">
                    {alliance} • {date}
                </p>

                <h1
                    class="text-5xl md:text-6xl font-extrabold text-neutral leading-tight mb-4"
                >
                    {title}
                </h1>

                <p
                    class="text-xl md:text-2xl font-light text-neutral mb-4 italic"
                >
                    {subtitle}
                </p>

                <p class="text-lg text-gray-600 mb-8">
                    {description}
                </p>

                <div
                    class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
                >
                    <a
                        href={linkForm}
                        target="_blank"
                        class="btn btn-primary btn-lg shadow-xl hover:shadow-2xl transition duration-300 transform hover:scale-105"
                    >
                        Inscribirse
                    </a>
                    <a
                        href="#beneficios"
                        class="btn btn-outline btn-primary btn-lg border-2 hover:bg-primary hover:text-white transition duration-300"
                    >
                        Conocer Más
                    </a>
                </div>
            </div>
        </div>

        <div class="p-4 md:p-8">
            <p class="text-2xl font-bold text-neutral mb-4 text-center">
                Mirá la Experiencia Inmersiva
            </p>

            <div class="flex flex-col lg:flex-row gap-6 justify-center">
                <a
                    href="#experiencia"
                    class="w-full lg:w-1/2 overflow-hidden rounded-xl shadow-xl transition duration-300 transform hover:scale-[1.01]"
                >
                    <img
                        src={previewFoto1.src}
                        alt="Clase de IA al aire libre en Merlo"
                        class="w-full h-full object-cover aspect-4/3"
                        loading="lazy"
                    />
                </a>

                <a
                    href="#experiencia"
                    class="w-full lg:w-1/2 overflow-hidden rounded-xl shadow-xl transition duration-300 transform hover:scale-[1.01]"
                >
                    <img
                        src={previewFoto2.src}
                        alt="Vista panorámica desde el mirador"
                        class="w-full h-full object-cover aspect-4/3"
                        loading="lazy"
                    />
                </a>
            </div>
        </div>
    </div>
</section>
