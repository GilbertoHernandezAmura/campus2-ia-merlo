---
// Información extraída de la web del Howard Johnson Merlo
const hotelName = "Howard Johnson Hotel Spa Convention Center Merlo";
const hotelMotto = "Vas a querer volver. Mucho más que un hotel.";
const hotelDescription =
    "El lugar ideal para disfrutar, descansar, relajarse y compartir momentos únicos. Ubicado en un entorno natural único, Howard Johnson Merlo ofrece el equilibrio perfecto entre arquitectura exclusiva y belleza autóctona.";

// URL de imagen obtenida del sitio web del hotel (ejemplo de una imagen del entorno o arquitectura)
// NOTA: Reemplaza esta URL con una imagen que desees usar.
const hotelImageUrl =
    "https://d1ofesossdj49a.cloudfront.net/sw_2049/TN/16_933505.jpg?h=1";

// Características destacadas
const features = [
    {
        icon: "fa-solid fa-mountain-sun",
        title: "Ubicación Privilegiada",
        detail: "Entorno natural único en la Ruta Prov. Nº1 Km 1,3 con vistas a las sierras, ideal para la reconexión.",
    },
    {
        icon: "fa-solid fa-spa",
        title: "Servicios de Bienestar",
        detail: "Diseñado para el descanso total, incluye espacios de bienestar, confort en habitaciones, y áreas de relax.",
    },
    {
        icon: "fa-solid fa-bed",
        title: "Suites de Confort",
        detail: "Habitaciones cómodas con sommiers King Size o Twin. Todo pensado para que tu única preocupación sea desconectar.",
    },
];
---

<section id="alojamiento" class="py-16 md:py-24 bg-base-100">
    <div class="max-w-6xl mx-auto px-4 md:px-8">
        <h2
            class="text-4xl md:text-5xl font-extrabold text-neutral mb-3 text-center"
        >
            Alojamiento
        </h2>
        <p
            class="text-xl text-primary font-semibold uppercase tracking-wider mb-12 text-center"
        >
            {hotelName}
        </p>

        <div
            class="card lg:card-side bg-gray-50 shadow-2xl overflow-hidden max-w-5xl mx-auto border-l-8 border-secondary"
        >
            <figure class="lg:w-1/2 w-full object-cover">
                <img
                    src={hotelImageUrl}
                    alt={`Vista del ${hotelName}`}
                    class="w-full h-full object-cover"
                    loading="lazy"
                />
            </figure>

            <div class="card-body lg:w-1/2 p-6 md:p-8">
                <h3 class="text-3xl font-bold text-neutral mb-3">
                    {hotelMotto}
                </h3>
                <p class="text-lg text-gray-700 mb-6">{hotelDescription}</p>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-y-6 md:gap-x-4">
                    {
                        features.map((feature) => (
                            <div class="md:col-span-1 text-center">
                                <i
                                    class={`${feature.icon} text-2xl text-accent mb-2`}
                                />
                                <h4 class="text-md font-bold text-neutral leading-tight">
                                    {feature.title}
                                </h4>
                            </div>
                        ))
                    }
                </div>

                <p class="mt-4 text-sm text-gray-600">
                    *El alojamiento es parte de la experiencia integral del
                    Programa Intensivo IA.
                </p>
            </div>
        </div>
    </div>
</section>
