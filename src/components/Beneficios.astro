---
// Contenido extraído del folleto para la sección de Beneficios/Resultados
const title = "Una nueva forma de aprender";
const subtitle = "¿Qué te llevás?";

const benefits = [
    {
        title: "Visión Integral de la IA",
        description:
            "Una mirada integral sobre la inteligencia artificial y su impacto cultural, educativo y tecnológico.",
        icon: "fa-solid fa-brain",
    },
    {
        title: "Herramientas Concretas",
        description:
            "Herramientas concretas para incorporar IA en tus proyectos personales o profesionales.",
        icon: "fa-solid fa-screwdriver-wrench",
    },
    {
        title: "Entorno Colaborativo",
        description:
            "Un entorno de aprendizaje colaborativo, con enfoque en la práctica y la creatividad.",
        icon: "fa-solid fa-users-viewfinder",
    },
    {
        title: "Experiencia en la Naturaleza",
        description:
            "La experiencia de compartir una semana en la naturaleza, aprendiendo, debatiendo y creando.",
        icon: "fa-solid fa-mountain-sun",
    },
    {
        title: "Certificación UNLC + UNSAM",
        description:
            "Certificación conjunta de la Universidad Nacional de los Comechingones y la Universidad Nacional de San Martín.",
        icon: "fa-solid fa-medal",
    },
];
// Esta variable ayuda a determinar el centrado en el grid
const numBenefits = benefits.length;
const transformationText =
    "La inteligencia artificial está transformando la manera en que producimos, enseñamos, investigamos y nos comunicamos.";
const coreQuote =
    "No se trata sólo de usar IA. Se trata de entenderla, cuestionarla y crear con ella.";
---

<section id="beneficios" class="py-16 md:py-24 bg-base-100">
    <div class="max-w-6xl mx-auto px-4 md:px-8">
        <div class="text-center mb-12 md:mb-16">
            <h2 class="text-4xl md:text-5xl font-extrabold text-neutral mb-2">
                {title}
            </h2>
            <p
                class="text-xl font-semibold uppercase tracking-wider text-secondary"
            >
                {subtitle}
            </p>
        </div>

        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:flex lg:flex-wrap lg:justify-center gap-8"
        >
            {
                benefits.map((item) => (
                    <div class="card bg-gray-50 p-6 shadow-md border-t-4 border-primary transition duration-500 hover:shadow-xl hover:-translate-y-1 text-neutral mx-auto md:mx-0 lg:w-[calc(33.333%-2rem)]">
                        <div class="card-body p-0 items-center text-center">
                            <div class="p-4 bg-primary text-base-100 rounded-full mb-3">
                                <i class={`text-3xl ${item.icon}`} />
                            </div>

                            <h3 class="card-title text-xl text-neutral mb-2 font-bold">
                                {item.title}
                            </h3>

                            <p class="text-gray-600">{item.description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<div class="py-12 bg-secondary text-base-100 shadow-xl">
    <div class="max-w-6xl mx-auto px-4 md:px-8 text-center">
        <p class="text-xl font-light mb-6">
            {transformationText}
        </p>

        <h3 class="text-2xl md:text-3xl font-bold italic leading-snug">
            <i class="fa-solid fa-quote-left text-accent mr-3"></i>
            {coreQuote}
            <i class="fa-solid fa-quote-right text-accent ml-3"></i>
        </h3>
    </div>
</div>
